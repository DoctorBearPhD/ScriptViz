<UserControl x:Class="ScriptViz.View.MoveListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScriptViz.View"
             xmlns:vm="clr-namespace:ScriptViz.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400"
             d:DataContext="{x:Type vm:MainWindowViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="MovesListBox"
                 ItemsSource="{Binding MoveNames}"
                 SelectedIndex="{Binding SelectedMoveIndex}"
                 ItemContainerStyle="{StaticResource DarkListBoxItemStyle}"
                 Style="{StaticResource DarkListBoxStyle}"/>
    </Grid>
</UserControl>
