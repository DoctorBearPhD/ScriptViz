                                                               Background="Transparent" 
                                                               Text="{Binding Filter, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}" 
                                                               Watermark="{TemplateBinding FilterWatermark}" Foreground="{DynamicResource AltMainTextBrush}" SelectionBrush="{DynamicResource ButtonHighlightedBgBrush}">
