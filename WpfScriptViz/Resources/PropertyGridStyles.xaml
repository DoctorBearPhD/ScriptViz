                                                                                    <GradientStop Color="#20FFCE68" Offset="0.39"/>
                                                                                    <GradientStop Color="#20FFCE68" Offset="0.69"/>
                                                                                    <GradientStop Color="#10FFFFFF" Offset="1"/>
                                                                                </LinearGradientBrush>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </MultiTrigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </RadioButton.Style>
