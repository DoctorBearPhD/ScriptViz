            <Setter.Value>
                <ContextMenu>
                    <MenuItem Header="Reset Value">
                        <MenuItem.Command>
                            <RoutedCommand/>
                        </MenuItem.Command>
                    </MenuItem>
                </ContextMenu>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="{DynamicResource MainBgBrush}"/>
        <Setter Property="BorderBrush" Value="#FF43577B"/>
        <Setter Property="BorderThickness" Value="1"/>
