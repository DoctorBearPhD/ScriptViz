                                                <Image.Source>
                                                    <BitmapImage UriSource="pack://application:,,,/Xceed.Wpf.Toolkit;v3.3.0.0;component/PropertyGrid/Images/Categorize16.png"/>
                                                </Image.Source>
                                            </Image>
